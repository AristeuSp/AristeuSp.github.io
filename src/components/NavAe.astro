---
import { Image } from 'astro:assets';
import gitLabLogo from '../../public/gitlab-logo-500-png.png';
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---


<h2>{SITE_TITLE}</h2>
<div class="internal-links">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
</div>

<div class="social-links">
    <a href="https://aristeusp.gitlab.io" target="_blank">
        <Image src={gitLabLogo} alt="Aristeu no GitLab" width="32" height="32" />
    </a>
    <a href="https://aristeusp.github.io" target="_blank">
        <span class="sr-only">Go to Astro's GitHub repo</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
            ><path
                fill="currentColor"
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg
        >
    </a>
</div>

<style>

h2 {
    font-family: "Atkinson", sans-serif;
    width: 170px;
    color: rgb(154, 7, 148);
    font-size: 1em;
    overflow-wrap: normal;
    font-weight: normal;
    margin-right: auto;
    line-height: 1em;
    padding-left: 0.8em;
    margin-top: 0.6em;
}

h2 a,
h2 a.active {
    text-decoration: none;
    overflow-wrap: normal;
}

.internal-links a {
    margin: 0;
    width: 5em;
}
.social-links {
    margin-left: auto;
    display: flex;
    flex-flow: nowrap;
    justify-content: flex-end;
    width: 170px;
    padding-right: 0.8em;
    font-size: 0.4em;
    line-height: 0.5em;
}
.social-links a {
    text-decoration: none;
    margin: 0 0.4em 0 0.4em;
    width: 32px;
}

</style>
